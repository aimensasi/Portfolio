<!DOCTYPE html>
<html>
  <head>
    <title>Portfolio</title>
    <%= csrf_meta_tags %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= favicon_link_tag("favicon.png") %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    
  </head>

  <body>
    <div class="container-fluid flex-column">

    	<!-- ========================================================================= -->
    	<!-- NavBar Section -->
    	<!-- ========================================================================= -->
    	<%= render :partial => "layouts/partials/navbar" %>
    	<!-- ========================================================================= -->
    	<!-- End Of NavBar Section -->
    	<!-- ========================================================================= -->

      <!-- ========================================================================= -->
      <!-- Hero Section -->
      <!-- ========================================================================= -->
      <section class="row hero">
        <div class="container">
          <h3 class="title">H!</h3> 
          <br>
          <h3 class="semi-title">I'm Aimen a <span class="typed">Full Stack Web Developer</span></h3>
        </div>
      </section>
      <!-- ========================================================================= -->
      <!-- End Of Hero Section -->
      <!-- ========================================================================= -->

      
      <!-- ========================================================================= -->
      <!-- End Of Works Section -->
      <!-- ========================================================================= -->
      <%= yield %>
      <!-- ========================================================================= -->
      <!-- End Of Works Section -->
      <!-- ========================================================================= -->


      <!-- ========================================================================= -->
      <!-- Footer Section -->
      <!-- ========================================================================= -->
      <%= render :partial => "layouts/partials/footer" %>
      <!-- ========================================================================= -->
      <!-- End Of Footer Section -->
      <!-- ========================================================================= -->
    </div>
    

    <%= javascript_include_tag 'application' %>
    <script src="https://use.fontawesome.com/9cc46c0388.js"></script>
  </body>

</html>